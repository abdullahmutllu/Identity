@model IDentityProcess.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}
<div class="row">
    <div class="col-md-4 offset-md-4">

        @if (ViewBag.status == "succsess")
        {
            <div class="alert alert-info">Şifre yenileme linki eposta adresinize gonderilmiştir.Epostanızı kontrol ediniz.</div>
            
        }
        else
        {

            <h4>Şifremi unuttum</h4>
            <div class="alert alert-info">
                Yeni şifre belirlemek için kayıtlı e-posta adresinizi yazınız.
                Şifre değiştirme linkini e-posta adresine gondereceğiz.
            </div>
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Gönder" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>